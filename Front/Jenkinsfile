def projectName = "TestFront"
def dockerImageName = "web-axity-holamundo-angular"
def dockerContainerName = "firtsAppDocker"
def NEXUS_DOCKER_REPO = "http://localhost:8084/repository/devOps-Docker/"

pipeline {
    agent any
    stages{

        stage('Checkout Project Test'){
            steps{
                checkout([$class: 'GitSCM',
                        branches: [[name: "${branch}"]],
                        doGenerateSubmoduleConfigurations: false,
                        extensions: [],
                        gitTool: 'Default',
                        submoduleCfg: [],
                        userRemoteConfigs: [[credentialsId: 'Git-SSH-Credentials', url: "git@github.com:Axity-DieGom/Test-Front.git"]]
                ])
            }
        }
        stage('SonarQube Analysis') {
            steps {
                script{
                    def scannerHome = tool 'sonarqube';
                        withSonarQubeEnv("sonarqube"){
                            sh "${scannerHome}/bin/sonar-scanner \
                            -Dsonar.projectKey=${projectName} \
                            -Dsonar.projectName=${projectName}"
                        }
                }
            }
        }
        stage('Docker Build'){
            steps{
                script{
                    sh "pwd"
                    sh "docker build -t ${dockerImageName} ."
                }
            }
        }
        stage('Docker run'){
            steps{
                script{
                    sh "docker container run --name ${dockerContainerName} -dp 83:80 ${dockerImageName}"
                }
            }
        }
        stage('Nexus login'){
            steps{
                script{
                    withCredentials([usernamePassword(credentialsId: 'Nexus-Credentials', usernameVariable: 'USER', passwordVariable: 'PASS' )]){
                        sh ' echo $PASS | docker login -u $USER --password-stdin ${NEXUS_DOCKER_REPO}'
                    } 
                }
            }
        }
        stage('Docker Tag'){
            steps{
                script{
                    sh 'docker tag ${dockerImageName}:latest ${NEXUS_DOCKER_REPO}'
                }
            }
        }
        stage('Docker push'){
            steps{
                script{
                    sh 'docker push ${NEXUS_DOCKER_REPO}'
                }
            }
        }
    }
}